# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/tabs.db

# Authentication
JWT_SECRET=change-this-in-production

# CORS Configuration
# Comma-separated list of allowed origins. Leave empty to allow all origins in development.
# Chrome extensions are automatically allowed.
# Example: ALLOWED_ORIGINS=http://localhost:3000,https://example.com
ALLOWED_ORIGINS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=60  # 60 requests per minute

# Logging
LOG_LEVEL=info
LOG_DIR=./data/logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=30d
LOG_ERROR_MAX_FILES=60d
